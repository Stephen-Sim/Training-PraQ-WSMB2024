<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoibleApp.Views.AddUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="usernameEntry" Placeholder="Enter your Username"/>
            <Entry x:Name="firstNameEntry" Placeholder="Enter your First Name"/>
            <Entry x:Name="lastNameEntry" Placeholder="Enter your Last Name"/>

            <Entry x:Name="ageEntry" Keyboard="Numeric" Placeholder="Enter your Age"/>
            <Entry x:Name="passwordEntry" Placeholder="Enter your Password" IsPassword="True"/>

            <Picker x:Name="rolePicker" Title="Select Your Role"/>

            <StackLayout Orientation="Horizontal">
                <RadioButton x:Name="maleRadioButton"/>
                <Label Text="Male"/>
                
                <RadioButton x:Name="femaleRadioButton"/>
                <Label Text="Female"/>
            </StackLayout>

            <Button Text="Add" Clicked="Button_Clicked"/>

            <Button Text="Cancel" Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>